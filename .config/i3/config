    statusline #ffffff
    separator #666666
    focused_workspace #808090 #606070 #C0C0C5
    active_workspace #5F5F5F #303030 #808080
    inactive_workspace #5F5F5F #303030 #808080
    urgent_workspace #2f343a #900000 #ffffff
  }
}
